.charts-wrapper {
  width: 750rpx;
  height: 100%;
  padding: 20rpx 20rpx 200rpx 20rpx;
  background-color: #eee;
  box-sizing: border-box;
  /* 请根据需求修改图表容器尺寸，如果父容器没有高度图表则会显示异常 */
}
.charts-wrapper .to-login {
  color: #2979ff;
  cursor: pointer;
}
.charts-wrapper .user-info {
  display: flex;
  justify-content: center;
  padding: 60rpx 20rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.charts-wrapper .user-info .avator {
  width: 100rpx;
  height: 100rpx;
  margin-right: 15rpx;
  border-radius: 50%;
}
.charts-wrapper .user-info .info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.charts-wrapper .user-info .info .phone {
  font-size: 30rpx;
}
.charts-wrapper .charts-box {
  width: 710rpx;
  height: 250px;
  margin-bottom: 100rpx;
}

